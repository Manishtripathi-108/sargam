{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "skipLibCheck": true,
        "types": ["node"],
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "noEmit": false,
        "noImplicitAny": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}

